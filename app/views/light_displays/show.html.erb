<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<div class="panel panel-default">
			<div class="panel-heading">
				<% if @light_display.top_image %>
					<%= image_tag @light_display.top_image.photo.url %>
				<% else %>
					<i class="fa fa-file-image-o fa-5x"></i>
				<% end %>
			</div>
			<div class="panel-body">
				<h1><%= link_to @light_display.name, @light_display %></h1>
				<p><%= @light_display.description %></p>
			</div>
			<div class="panel-footer">
				<p>Submitted by: <%= @light_display.formatted_user %></p>
				<% if current_user && @light_display.user == current_user %>
					<%= link_to 'Edit', edit_light_display_path(@light_display) %> |
					<%= link_to 'Delete', light_display_path, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			</div>			
		</div>
	</div>
</div>

